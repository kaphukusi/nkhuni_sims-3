                      </select>
                  </div>
                </div>

                <div class="form-group">
                  <label for="lecture_hours" class="col-sm-2 control-label">Lecture Hours per week</label>

                  <div class="col-sm-5">
                    <input class="form-control" name="lecture_hours" type="text" value="<%= this_course.course_lecture_hours %>">
                  </div>
                </div>


                <div class="form-group">
                  <label for="telephone" class="col-sm-2 control-label">Lab Hours per week</label>

                  <div class="col-sm-5">
                    <input type="text" class="form-control" name="lab_hours" value="<%= this_course.course_lab_hours %>">
                  </div>
                </div>

                <input type="hidden" value="<%= this_course.course_id %>" name="course_id">
                
              </div>
