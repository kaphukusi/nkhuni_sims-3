        <div class="col-md-12">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">    </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" method="POST" action="/courses/save_edited">
              <div class="box-body">
                <div class="form-group">
                  <label for="name" class="col-sm-2 control-label">Name</label>

                  <div class="col-sm-5">
                    <input class="form-control" id="name" name="name" value="<%= this_course.course_name %>">
                  </div>
                </div>
                <div class="form-group">
                  <label for="code" class="col-sm-2 control-label">Code</label>

