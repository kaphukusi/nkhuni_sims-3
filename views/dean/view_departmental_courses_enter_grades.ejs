          <div class="box">
            <div class="box-header">
              <h3 class="box-title">A list of all Courses</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th></th>
                  <th>Course Name</th>
                  <th>Course Code</th>
                  <th>Department</th>
                  <th>Year Offered</th>
                  <th>Semester Offered</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                <% var count = 1%>
                <% for (var row in courses){ %>
                <tr>
                  <td style="font-weight: bold;"><%= count %>.</td>
                  <td><%= courses[row].course_name %> </td>
                  <td><%= courses[row].course_code %> </td>
                  <td><%= courses[row].department_id %></td>
                  <td><%= courses[row].course_year_offered %></td>
                  <td><%= courses[row].course_semester %></td>
                  <td><a href="/enter_grades_for_this_course?course_code=<%= courses[row].course_code %>"><img src="dist/img/enter.jpg" width="30px" class="img-circle" alt="Ico Image"> </a></td>
                  
                </tr>
                <% count = count + 1 %>
                <% } %>
                
                </tbody>
                <tfoot>
                <tr>
                  <th></th>
                  <th>Course Name</th>
                  <th>Course Code</th>
                  <th>Department</th>
                  <th>Year Offered</th>
                  <th>Semester Offered</th>
                  <th></th>
                </tr>
                </tfoot>
              </table>

          
            <!-- /.box-body -->
